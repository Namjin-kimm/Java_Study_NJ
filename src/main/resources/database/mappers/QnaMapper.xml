<?xml version="1.0" encoding="UTF-8"?>
			<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    
		    
<mapper namespace="com.iu.start.board.qna.QnaDAO">
		    
	<select id="getList" resultType="QnaDTO">
		SELECT * FROM 
			(SELECT ROWNUM R, N.* FROM
				(SELECT * FROM NOTICE ORDER BY NUM DESC) N)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	<insert id="setAdd" parameterType="BoardDTO">
	 	INSERT INTO QNA VALUES (BOARD_SEQ.NEXTVAL, #{title}, #{writer}, #{contents}, SYSDATE, 0,0,0,0)
	</insert>
	
	<select id="getDetail" parameterType="BoardDTO" resultType="QnaDTO">
		SELECT * FROM QNA WHERE NUM = #{num}
	</select>
	
	<update id="setUpdate" parameterType="BoardDTO">
	 	UPDATE QNA SET TITLE=#{title}, CONTENTS=#{contents} WHERE NUM=#{num}
	</update>
	
	<delete id="setDelete" parameterType="BoardDTO">
	 	DELETE QNA WHERE NUM = #{num}
	</delete>
	
	<select id="getCount" resultType="Long">
		SELECT COUNT(NUM) FROM QNA
	</select>
		    
</mapper>